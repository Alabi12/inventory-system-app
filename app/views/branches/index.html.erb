<h1>Branches</h1>
<%= link_to 'New Branch', new_branch_path, class: 'btn btn-primary' %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= branch.location %></td>
        <td>
          <%= link_to 'Edit', edit_branch_path(branch), class: 'btn btn-warning' %> |
          <%= link_to 'View', branch_path(branch), class: 'btn btn-warning' %> |
          <%= button_to 'Delete', branch, method: :delete, data: { confirm: 'Are you sure you want to delete this branch?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
