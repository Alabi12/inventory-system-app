<h1>Inventories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>SKU</th>
      <th>Quantity</th>
      <th>Warehouse</th>
      <th>Branch</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.name %></td>
        <td><%= inventory.sku %></td>
        <td><%= inventory.quantity %></td>
        <td><%= inventory.warehouse&.name %></td>
        <td><%= inventory.branch&.name %></td>
        <td>
          <%= link_to 'Show', inventory_path(inventory), class: 'btn btn-info' %> |
          <%= link_to 'Edit', edit_inventory_path(inventory), class: 'btn btn-warning' %> |
          <%= button_to 'Delete', inventory, method: :delete, data: { confirm: 'Are you sure you want to delete this inventory?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Inventory', new_inventory_path, class: 'btn btn-primary' %>
