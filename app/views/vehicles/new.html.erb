<h1>Add Vehicle to <%= @warehouse.name %></h1>

<%= form_with(model: [@warehouse, @vehicle], local: true) do |form| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>
      <ul>
        <% @vehicle.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :vehicle_number, "Vehicle Number" %>
    <%= form.text_field :vehicle_number %>
  </div>

  <div class="field">
    <%= form.label :capacity, "Capacity" %>
    <%= form.number_field :capacity %>
  </div>

  <div class="actions">
    <%= form.submit 'Add Vehicle' %>
  </div>
<% end %>

<%= link_to 'Back to Vehicles', warehouse_vehicles_path(@warehouse) %>
