<h1>Edit Vehicle</h1>

<%= form_with(model: @vehicle, local: true) do |form| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>
      <ul>
        <% @vehicle.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :vehicle_number %>
    <%= form.text_field :vehicle_number %>
  </div>

  <div class="field">
    <%= form.label :capacity %>
    <%= form.number_field :capacity %>
  </div>

  <div class="field">
    <%= form.label :warehouse_id %>
    <%= form.collection_select :warehouse_id, Warehouse.all, :id, :name, prompt: "Select Warehouse" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to Vehicles', vehicles_path %>
